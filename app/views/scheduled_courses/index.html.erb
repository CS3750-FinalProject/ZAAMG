<p id="notice"><%= notice %></p>

<h1>Listing Scheduled Courses</h1>

<table>
  <thead>
    <tr>
      <th>Semester</th>
      <th>Course</th>
      <th>Professor</th>
      <th>Campus</th>
      <th>Classroom</th>
      <th>Days</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Block</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scheduled_courses.each do |scheduled_course| %>
      <tr>
        <td><%= "#{scheduled_course.semester.year} #{scheduled_course.semester.season}" %></td>
        <td><%= "#{scheduled_course.course.program.name} #{scheduled_course.course.code} - #{scheduled_course.course.name}" %></td>
        <td><%= "#{scheduled_course.professor.first_name} #{scheduled_course.professor.last_name}" %></td>
        <td><%= scheduled_course.location.campus %></td>
        <td><%= scheduled_course.classroom.room_number %></td>
        <td><%= scheduled_course.days.join('') %></td>
        <td><%= scheduled_course.start_time.strftime("%I:%M%p") %></td>
        <td><%= scheduled_course.end_time.strftime("%I:%M%p") %></td>
        <td><%= scheduled_course.block.capitalize %></td>
        <td><%= link_to 'Show', scheduled_course %></td>
        <td><%= link_to 'Edit', edit_scheduled_course_path(scheduled_course) %></td>
        <td><%= link_to 'Destroy', scheduled_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

